<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.OVCirrus_API_Library" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Disable default action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Use the toolbar as the action bar -->
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorGrayDark</item>
        <item name="colorPrimaryVariant">@color/colorGrayLight</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true
        </item>  <!-- Primary text color used in the Toolbar -->
    </style>

</resources>